</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
                <strong><p style="text-align: center;">Result for President Position</p></strong>
                <canvas id="myChartPres"></canvas>
            </div>
            <div class="col-1"></div>
        </div>

        <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
                <strong><p style="text-align: center;">Result for Vice President Position</p></strong>
                <canvas id="myChartVP"></canvas>
            </div>
            <div class="col-1"></div>
        </div>

        <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
                <strong><p style="text-align: center;" >Result for General Secretary Position</p></strong>
                <canvas id="myChartSec"></canvas>
            </div>
            <div class="col-1"></div>
        </div>
    </div>

    <script src="js/Chart.min.js" integrity="sha512-d9xgZrVZpmmQlfonhQUvTR7lMPtO7NkZMkA0ABN3PHCbKA5nqylQ/yWlFAyY6hYgdF1Qh6nYiuADWwKB4C2WSw==" crossorigin="anonymous"></script>
    <!-- Ploting Graph -->
    <script>
        const myVar = <%- JSON.stringify(pres_name); %>;
        const voteNo = <%- JSON.stringify(pres_vote); %>;
        var ctx = document.getElementById('myChartPres');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: myVar,
                datasets: [{
                    data: voteNo,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>

    <script>
    const myVar1 = <%- JSON.stringify(vp_name); %>;
    const voteNo1 = <%- JSON.stringify(vp_vote); %>;
    var ctx1 = document.getElementById('myChartVP');
    var myChart1 = new Chart(ctx1, {
        type: 'bar',
        data: {
            labels: myVar1,
            datasets: [{
                data: voteNo1,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
